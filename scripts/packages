#!/bin/bash

mkdir -p "$HOME/.secrets"
mkdir -p "$HOME/.kube"
mkdir -p "$HOME/.ssh"

sudo apt update || true
sudo apt upgrade -y

sudo apt install --no-install-recommends -y \
	adduser \
	autoconf \
	automake \
	bash-completion \
	bc \
	bzip2 \
	ca-certificates \
	coreutils \
	curl \
	dnsutils \
	file \
	findutils \
	gcc \
	git \
	gnupg \
	gnupg2 \
	grep \
	gzip \
	hostname \
	indent \
	iptables \
	less \
	libc6-dev \
    libffi-dev \
    libncurses-dev \
    libreadline-dev \
    libssl-dev \
    libtool \
    libxslt-dev \
    libyaml-dev \
	locales \
	lsof \
	make \
	mount \
	net-tools \
	neovim \
	ssh \
	strace \
	sudo \
	tar \
	tree \
	tzdata \
    unixodbc-dev \
	unzip \
	xclip \
	xz-utils \
	zip \
    zsh