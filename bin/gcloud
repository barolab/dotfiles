#!/bin/bash

BASE_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
GCLOUD_HOME="${BASE_HOME}/gcloud"

mkdir -p "${GCLOUD_HOME}"
docker run -it \
	--rm \
	--volume "${GCLOUD_HOME}:/root/.config/gcloud" \
	--volume "${HOME}/.ssh:/root/.ssh:ro" \
	--volume "$(command -v docker):/usr/bin/docker" \
	--volume /var/run/docker.sock:/var/run/docker.sock \
	--log-driver none \
	jess/gcloud "${@}"
