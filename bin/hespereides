#!/bin/bash

PWD=$(pwd)
BASE_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
HESPERIDES_HOME="${BASE_HOME}/hesperides"

mkdir -p "${HESPERIDES_HOME}"
docker run -it \
	--rm \
	--volume "${PWD}:${PWD}" \
	--volume "${HESPERIDES_HOME}:/home/user/.hesperides" \
	--log-driver none \
	barolab/hesperides-cli "${@}"